<h1>New Game</h1>

<ul>
  <% @letters.each do |letter|  %>
    <li><%= letter %></li>
  <% end %>
</ul>

<p>Whats the longest word you can find?</p>

<form  class="input-group" action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>

  <input class="form-control" type="text" name="word">
  <input type="submit" value="Play" class="btn btn-primary">
</form>
